    "hyprland/workspaces": {
        "show-special": true,
        "format": "<sub>{icon}</sub>\n{windows}",
        "format-window-separator": " ",
        "window-rewrite-default": ".",
        "window-rewrite": {
            "title<.*[yY]ou[tT]ube.*>": "ÔÖ™", // Windows whose titles contain "youtube"
            "class<firefox>": "Óôò", // Windows whose classes are "firefox"
            "class<vivaldi-stable>": "Ôâ©",
            "class<spotify>": "ÔÜº",
            "class<chromium-browser>": "Ôâ®",
            // "class<firefox> title<.*github.*>": "ÔÑì", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
            "foot": "Óûï", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            "code": "Û∞®û",
            "kitty": "Ó™Ö",
            "guake": "Óûï",
            "blackbox": "ÔÑ†",
        },
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "max-length": 25
